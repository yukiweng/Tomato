.wrapper{
  background: #eee;
  height:100vh;
  overflow: hidden;
}
.listWrapper{
  height:550rpx;
}
.select{
  border:1px solid #F6705A;
  width:1em;
  height:1em;
  border-radius: 50%;
  margin-right: 1em;
  flex-shrink: 0;
}
.select.active{
  position:relative;
}
.select.active::after{
  content:'';
  display: block;
  background:#F6705A;
  opacity: 0.8;
  width:0.6em;
  height:0.6em;
  border-radius: 50%;
  position: absolute;
  top:50%;
  left:50%;
  transform: translate(-50%,-50%)  
}
.item{ 
  padding:0.5em 2em;
  margin:0.5em 0.8em;
  background: #fff;
  border-radius:8rpx;
  box-shadow: 0 0 4rpx rgba(0,0,0,0.2);
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.start{
  background: linear-gradient(to bottom, rgba(253,255,249,1) 0%,rgba(244,249,248,1) 100%);
  margin: 1.2em 0.8em;
  padding:2em 0 1.2em 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.clockWrapper{
  max-width: 400rpx;
  margin:auto;
}