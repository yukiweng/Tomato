
.clock{
  display:flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

.clock>text{
  color: #fff;
  position: absolute;
  top:50%;
  left: 50%;
  transform: translate(-50%,-80%);
  width: 100%;
  display: flex;
  justify-content: center;
}

.clock image{
  width:320rpx;
  height:320rpx;
}

.active{
  opacity: 0.9
}